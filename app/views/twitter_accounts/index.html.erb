<div class="d-flex align-items-center justify-content-between">
<h1>Twitter Accounts</h1>
<%= link_to "Connect a Twitter account", "/auth/twitter", data: {turbo: "false"}, method: :post, class: "btn btn-primary"%>
</div>


<% @twitter_accounts.each do |twitter_account| %>
    <div class="d-flex align-items-center mb-4">
    <div class="me-4">
        <%= image_tag twitter_account.image, class: "rounded-circle" %>
        <%= twitter_account.name %>
    </div>
<% end %>